<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Blog_Add"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type Of Content"

        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="15sp">

    </TextView>
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:id="@+id/content_type_add"
        android:hint="Type Of Content"
        android:background="@drawable/shape"
        android:padding="10dp">

    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heading"

        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="15sp">

    </TextView>
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Heading"
        android:id="@+id/content_type_heading"
        android:background="@drawable/shape"
        android:padding="10dp">

    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brief Content"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="15sp">

    </TextView>
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Brief Content"
        android:id="@+id/content_type_brief_content"
        android:background="@drawable/shape"
        android:padding="10dp">

    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Content"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="15sp">

    </TextView>
    <EditText
        android:layout_width="300dp"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        android:id="@+id/content_type_full_content"
        android:inputType="textLongMessage"
        android:background="@drawable/shape"
        android:padding="10dp">

    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blog Image"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="15sp">

    </TextView>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:hint="Heading"
        android:id="@+id/image_for_blog_post"
        android:background="@drawable/shape"
        android:padding="10dp">

    </ImageView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Submit"
        android:id="@+id/submit_button"
        android:background="@color/colorPrimary"
        android:layout_gravity="center"
        android:textColor="#ffffff">

    </Button>


</LinearLayout>
</ScrollView>